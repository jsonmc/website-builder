extends layout.pug

block title
  title= "JsonMC: " + movie.name
block content
  h2#movie-name= movie.name + ' (' + movie.year + ')'
  .storyline= movie.storyline
  dl.movie-data
    dt Release Date
    dd= movie['release-date']
    dt Runtime
    dd= movie.runtime
    dt Writer
    dd= movie.writer.join(', ')
  h3 Actors
  .actor-list
    ul
      each actor in movie.actors
        li
          a(href=buildActorUrl(actor))= actor
  .file-location
    a(href='https://github.com/jsonmc/jsonmc/blob/master/' + filename) This movie file on github
